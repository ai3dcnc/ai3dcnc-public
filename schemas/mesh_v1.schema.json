{
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "title":"mesh_v1",
  "type":"object",
  "properties":{
    "meshes":{
      "type":"array",
      "items":{
        "type":"object",
        "required":["name","vertices","triangles"],
        "properties":{
          "name":{"type":"string"},
          "vertices":{"type":"array","items":{"type":"array","minItems":3,"maxItems":3}},
          "triangles":{"type":"array","items":{"oneOf":[
            {"type":"array","minItems":3,"maxItems":3,"items":{"type":"integer","minimum":0}},
            {"type":"object","required":["v"],"properties":{"v":{"type":"array","minItems":3,"maxItems":3,"items":{"type":"integer","minimum":0}}}}
          ]}}
        }
      }
    }
  },
  "required":["meshes"]
}
